<% @title = "Homepage"%>



<%if signed_in?%>
 
	<div class="row">
		<div class="col-md-3">
			<% if current_user.avatar.attachment %>
				<%= image_tag current_user.avatar, height: 50 %>
				<%= link_to "edit", edit_user_path(current_user) %>
  				 <%= link_to "delete", current_user, method: :delete, data: { confirm: "Are you sure?" } %>
			<% end %>

		
				<%= form_for @post do |f| %>
					<div class="form-group">
						<%= f.text_area :body, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.file_field :image, class: "form-control" %>
					</div>
					<%= f.submit :submit, class: "btn btn-outline-success" %>
				<% end %>
		</div>


		<div class="col-md-9">
			<%= render @feed %>
		</div>

	</div>

<% else %>
	<div class="jumbotron">
		<h1>Welcome to Intagram!</h1>
		<%= link_to "Sign in", login_path, class: "btn btn-primary" %> 
		<%= link_to "Register", signup_path, class: "btn btn-outline-info" %>
	</div>
<% end %>









